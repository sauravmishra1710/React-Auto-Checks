{
    "env": {
      "node": true,
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "ignorePatterns": ["babel.config.js"], // Ignore specific files
    "extends": ["eslint:recommended", "plugin:react/recommended", "airbnb"],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "react/prop-types": "off",
      "react/jsx-filename-extension": [0]
    }
  }
  